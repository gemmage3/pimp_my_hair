<div class="navbar navbar-expand-sm navbar-dark navbar-lewagon">
  <%= link_to hairs_path, class: "navbar-brand" do %>
    <div class="ml-3">
        <%= image_tag "logo_pimp_my_hair.png" %>
    </div>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item active h5 mr-3">
            <%= link_to "Browse", hairs_path, class: "home_page nav-link" %>
          </li>
          <li class="nav-item active h5 mr-3">
            <%= link_to "Sell", new_hair_path, class: "nav-link" %>
          </li>
          <li class="nav-item active h5 mr-3">
            <%= link_to "My Hair", my_hair_hairs_path, class: "nav-link" %>
          </li>
          <li class="nav-item h5 mr-3">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "log_out nav-link" %>
          </li>
          <li class="nav-item mr-3">
            <% if current_user.avatar.attached? %>
              <%= cl_image_tag current_user.avatar.key, class: "avatar" %>
              <% end %>
          </li>
        <% else %>
          <li class="nav-item active mr-3">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
    </ul>
  </div>
</div>

