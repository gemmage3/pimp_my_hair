<h1>Find the hair that fits your needs</h1>

<ul>
  <% @unsold_hairs.each do |hair|%>
    <li class="card">
      <%= cl_image_tag hair.photos.first.key %>
      <div class="card-infos">
        <div>
          <h2> <%= hair.length_cm %> cm of <%= hair.hair_type %> <%= hair.colour %> hair </h2>
          <h3> <%= hair.weight_grams %> grams for <%= hair.price %> GBP </h3>
        </div>
        <%= link_to 'Purchase Now!', new_purchase_path, class: 'btn btn-warning' %>
      </div>
    </li>
  <% end %>
</ul>

<%= link_to 'Sell your hair', new_hair_path, class: 'btn btn-warning' %>

