<%= render 'shared/banner' %>

<div class="cards">
  <% @unsold_hairs.each do |hair|%>
    <div class="card">
      <% if !hair.photos.first == nil %>
        <%= cl_image_tag hair.photos.first.key %>
      <% end %>
      <div class="card-infos">
        <div>
          <p> <%= hair.length_cm %> cm of <%= hair.hair_type %> <%= hair.colour %> hair </p>
          <p> <%= hair.weight_grams %> grams for <%= hair.price %> GBP </p>
        </div>
        <%= link_to 'Purchase Now!', hair_path(hair.id), class: 'btn btn-warning' %>
      </div>
    </div>
  <% end %>
</div>

