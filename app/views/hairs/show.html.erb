<div class="container m-6">
  <h1>Overview</h1>
  <div class="d-flex justify-content-around">
    <div class="purchase-item">
      <div class="card">
        <%= cl_image_tag @hair.photos.first.key %>
        <div class="card-infos">
          <p> <%= @hair.length_cm %> cm of <%= @hair.hair_type %> <%= @hair.colour %> </p>
          <p> <%= @hair.weight_grams %> grams for <%= @hair.price %> GBP </p>
        </div>
      </div>
    </div>
    <div class="purchase-item">
      <div>
        <h3>This item is offered by <%= @hair.user.name %> </h3>

        <h3>Would you like to leave a comment?</h3>
        <%= simple_form_for @purchase, :url => hair_purchases_path(@hair.id) do |f| %>
          <%= f.error_notification %>
          <%= f.input :comment %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
